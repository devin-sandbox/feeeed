<div class="cards">
  <% channels.each do |channel| %>
  <div class="card channel-card">
    <div class="card-image">
      <%= image_tag(channel.image_url_or_placeholder, class: "card-image-front", width: "100%", height: "100%") %>
      <%= image_tag(channel.image_url_or_placeholder, class: "card-image-back", width: "100%", height: "100%") %>
    </div>
    <h3 class="card-title">
      <%= image_tag(channel.favicon_url, size: "16x16") %>
      <%= link_to(channel.title, channel) %>
    </h3>
    <span>
      <%= channel.description.to_s[0..64] %><br/>
    </span>
    <ul>
      <li><%= link_to("Site", channel.site_url) %></li>
      <li><%= link_to("Feed", channel.feed_url) %></li>
    </ul>
  </div>
  <% end %>
</div>
