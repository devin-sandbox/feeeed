<h2><%= @channel.title %></h2>

<% if @channel.description %>
  <p><%= @channel.description %></p>
<% end %>
<% if @channel.image_url %>
  <p><%= image_tag(@channel.image_url, style: "max-height: 200px;") %>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Published at</th>
    <th>Image</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= link_to(item.title, item.url) %></td>
      <td><%= item.published_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td style="width: 100px; height: 100px;">
        <%= image_tag(item.image_url, width: "100%", height: "100%") if item.image_url %>
      </td>
    </tr>
  <% end %>
</table>
