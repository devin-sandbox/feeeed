<div class="cards">
  <% items.each do |item| %>
  <div class="card item-card">
    <div class="card-image">
      <%= image_tag(item.image_url_or_placeholder, class: "card-image-front", width: "100%", height: "100%") %>
      <%= image_tag(item.image_url_or_placeholder, class: "card-image-back", width: "100%", height: "100%") %>
    </div>
    <h3 class="card-title"><%= link_to(item.title, item.url) %></h3>
    <% if with_channel %>
      <span class="card-channel">
        <%= image_tag(item.channel.favicon_url, size: "16x16") %>
        <%= link_to(item.channel.title, item.channel) %>
      </span><br/>
    <% end %>
    <span class="card-publish"><%= item.published_at.strftime("%Y-%m-%d %H:%M:%S") %></span>
  </div>
  <% end %>
</div>
