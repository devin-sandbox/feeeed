<section>
  <h2>Recent Items</h2>
  <table>
    <tr>
      <th>Title</th>
      <th>Published at</th>
      <th>Image</th>
    </tr>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to(item.title, item.url) %></td>
        <td><%= item.published_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td style="width: 100px; height: 100px;">
          <%= image_tag(item.image_url, width: "100%", height: "100%") if item.image_url %>
        </td>
      </tr>
    <% end %>
  </table>
</section>

<section>
  <h2>Recent Channels</h2>
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>URLs</th>
      <th>Image</th>
    </tr>
    <% @channels.each do |channel| %>
    <tr>
      <td><%= link_to(channel.title, channel) %></td>
      <td><%= channel.description.to_s[0..300] %></td>
      <td>
        <ul>
          <li><%= link_to("Site", channel.site_url) %></li>
          <li><%= link_to("Feed", channel.feed_url) %></li>
        </ul>
      </td>
      <td style="width: 100px; height: 100px;">
        <% if channel.image_url %>
        <%= image_tag(channel.image_url, width: "100%", height: "100%") %>
        <% end %>
      </td>
    </tr>
    <% end%>
  </table>
</section>
