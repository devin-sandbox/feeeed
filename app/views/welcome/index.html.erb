<% unless logged_in? %>
<%= render(partial: "layouts/hero", locals: { show_buttons: true }) %>
<% end %>

<section>
  <h2 class="text-2xl font-bold mt-6 mb-4">Recent Pawprints</h2>
  <div class="w-full flex overflow-scroll">
    <%= render(partial: "pawprints/blocks", locals: { pawprints: @pawprints }) %>
  </div>
</section>

<section>
  <h2 class="text-2xl font-bold mt-6 mb-4">Recent Channel & Items</h2>
  <div class="w-full flex overflow-scroll">
    <%= render(partial: "channels/with3items", collection: @channels, as: :channel) %>
  </div>
</section>

<section>
  <h2 class="text-2xl font-bold mt-6 mb-4">Recent Channels</h2>
  <div class="w-full flex overflow-scroll">
    <% @channels.each do |channel| %>
    <div class="min-w-[160px] mr-[20px] sm:min-w-[240px]">
      <div class="w-[160px] h-[160px] sm:w-[240px] sm:h-[240px]">
        <%= link_to(image_tag(channel.image_url_or_placeholder, class: "w-full h-full object-cover"), channel) %>
      </div>
      <h3 class="card-title">
        <%= image_tag(channel.favicon_url, size: "16x16") %>
        <%= link_to(channel.title, channel) %>
      </h3>
      <span class="card-description">
        <%= channel.description.to_s[0..64] %><br/>
      </span>
    </div>
    <% end %>
  </div>
</section>

<section>
  <h2 class="text-2xl font-bold mt-6 mb-4">Recent Channel Groups</h2>
  <div class="w-full flex flex-wrap">
    <%= render(partial: "channel_groups/cards", locals: { channel_groups: @channel_groups }) %>
  </div>
</section>
